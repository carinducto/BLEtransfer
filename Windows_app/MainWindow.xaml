<Window x:Class="BLETester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inductosense RTC Data Transfer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Inductosense RTC Data Transfer" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="PSoC6 BLE Ultrasound Waveform Receiver" FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Status and Controls -->
            <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="15">
                <StackPanel>
                    <!-- Connection Status -->
                    <TextBlock Text="Connection Status" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Red" Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionStateText" Text="{Binding ConnectionState}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding DeviceName, StringFormat='Device: {0}'}" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding NegotiatedMTU, StringFormat='MTU: {0} bytes'}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>

                    <Separator Margin="0,15"/>

                    <!-- Transfer Progress -->
                    <TextBlock Text="Transfer Progress" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <StackPanel x:Name="TransferStatsPanel">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Blocks:" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="{Binding TransferStats.BlocksReceived, StringFormat='{}{0} / 1800'}"
                                     FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Right"/>
                        </Grid>

                        <ProgressBar Height="6" Maximum="1800" Value="{Binding TransferStats.BlocksReceived, Mode=OneWay}" Margin="0,5"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Progress:" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="{Binding TransferStats.ProgressPercent, StringFormat='{}{0:F1}%'}"
                                     FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rate:" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="{Binding TransferStats.ThroughputKBps, StringFormat='{}{0:F1} KB/s'}"
                                     FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel VerticalAlignment="Bottom" Margin="0,30,0,0">
                        <!-- Control Buttons -->
                        <Button x:Name="StartStopButton" Content="Start Transfer" Padding="10" Margin="0,0,0,10"
                                Click="StartStopButton_Click" IsEnabled="{Binding IsConnected}"/>
                        <Button x:Name="ScanButton" Content="Scan for Device" Padding="10" Click="ScanButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Right Panel - Waveform Display -->
            <Border Grid.Column="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Ultrasound Waveform" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        <Border Background="#4A90E2" CornerRadius="3" Padding="6,3" Margin="10,0,0,0">
                            <TextBlock Text="{Binding CurrentMode}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <!-- Waveform display placeholder -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBlock Text="No waveform data yet&#x0a;Start transfer to see waveforms"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 TextAlignment="Center" Foreground="Gray"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
